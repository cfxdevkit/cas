{
  "name": "conflux-cas",
  "version": "0.1.0",
  "description": "Conflux Automation Site â€“ non-custodial limit order & DCA automation on Conflux eSpace",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter '@conflux-cas/*' build",
    "dev": "concurrently -k -n backend,frontend,worker -c cyan,magenta,green \"pnpm --filter @conflux-cas/backend dev\" \"pnpm --filter @conflux-cas/frontend dev:https\" \"pnpm --filter @conflux-cas/worker dev\"",
    "test": "pnpm --filter '@conflux-cas/*' test",
    "type-check": "pnpm --filter '@conflux-cas/*' type-check",
    "lint": "biome lint --write .",
    "dev:backend": "pnpm --filter @conflux-cas/backend dev",
    "dev:worker": "pnpm --filter @conflux-cas/worker dev",
    "dev:frontend": "pnpm --filter @conflux-cas/frontend dev",
    "gen-key": "node scripts/gen-key.mjs",
    "deploy:contracts": "tsx --tsconfig tsconfig.scripts.json scripts/deploy.ts",
    "deploy:contracts:mainnet": "NETWORK=mainnet tsx --tsconfig tsconfig.scripts.json scripts/deploy.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@cfxdevkit/sdk": "workspace:*",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "@types/node": "^25.0.3",
    "concurrently": "^8.2.2",
    "dotenv": "^17.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "viem": "^2.43.3"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
