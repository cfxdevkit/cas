{
  "name": "conflux-cas",
  "version": "0.1.0",
  "description": "Conflux Automation Site â€“ non-custodial limit order & DCA automation on Conflux eSpace",
  "private": true,
  "type": "module",
  "workspaces": [
    "shared",
    "contracts",
    "worker",
    "backend",
    "frontend"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "concurrently -k -n backend,frontend,worker -c cyan,magenta,green \"pnpm --filter @conflux-cas/backend dev\" \"pnpm --filter @conflux-cas/frontend dev:https\" \"pnpm --filter @conflux-cas/worker dev\"",
    "test": "pnpm -r test",
    "type-check": "pnpm -r type-check",
    "lint": "biome lint --write .",
    "dev:backend": "pnpm --filter @conflux-cas/backend dev",
    "dev:worker": "pnpm --filter @conflux-cas/worker dev",
    "dev:frontend": "pnpm --filter @conflux-cas/frontend dev",
    "contracts:compile": "pnpm --filter @conflux-cas/contracts compile",
    "contracts:test": "pnpm --filter @conflux-cas/contracts test",
    "contracts:deploy": "pnpm --filter @conflux-cas/contracts run deploy",
    "contracts:deploy:mainnet": "pnpm --filter @conflux-cas/contracts run deploy:mainnet",
    "contracts:deploy:local": "pnpm --filter @conflux-cas/contracts run deploy:local",
    "contracts:verify": "pnpm --filter @conflux-cas/contracts run verify",
    "contracts:verify:mainnet": "pnpm --filter @conflux-cas/contracts run verify:mainnet",
    "contracts:check-wallet": "pnpm --filter @conflux-cas/contracts run check-wallet",
    "gen-key": "node scripts/gen-key.mjs"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "bufferutil",
      "esbuild",
      "keccak",
      "secp256k1",
      "utf-8-validate"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "@types/node": "^25.0.3",
    "concurrently": "^8.2.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
