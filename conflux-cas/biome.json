{
  "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
  "root": false,
  "extends": "//",
  "files": {
    "includes": ["**", "!node_modules", "!dist", "!.next", "!artifacts", "!cache", "!coverage", "!typechain-types"]
  },
  "css": {
    "linter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "includes": ["**/*.css"],
      "linter": {
        "rules": {
          "suspicious": {
            "noUnknownAtRules": "off"
          }
        }
      }
    }
  ],
  "linter": {
    "rules": {
      "a11y": {
        "useButtonType": "error",
        "noSvgWithoutTitle": "warn",
        "noLabelWithoutControl": "error",
        "useKeyWithClickEvents": "warn",
        "noStaticElementInteractions": "warn",
        "noAutofocus": "warn"
      },
      "performance": {
        "noImgElement": "warn"
      }
    }
  }
}
